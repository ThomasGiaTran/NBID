@model NBID.Models.HomeViewModels

@{
    ViewBag.Title = "New NBID";
}

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<h2 class="text-center">New NBID</h2>

@using (Html.BeginForm())
{
    <div class="panel panel-primary">
        <div class="panel-body">
            <div class="row" style="margin-left:1em; margin-right:1em;">
                <div style="font:x-large">
                    NBID: @ViewBag.newNBID
                </div>
            </div>
        </div>            
        <div class="panel-footer text-right" style="margin-right:1em">
            <button id="btnGetID" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus-sign"></i> Get ID
            </button>
        </div>
    </div>
}



